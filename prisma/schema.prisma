// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum MarketType {
  KOSPI
  KOSDAQ
}

enum AlarmCondition {
  LT
  GT
}

enum TrailMode {
  DISABLE
  BUY
  SELL
}

model StockInfo {
  stockCode  String     @id @db.VarChar(20)
  stockName  String     @db.VarChar(200)
  marketType MarketType @default(KOSPI)
}

model TradePlan {
  stockCode             String    @id @db.VarChar(20)
  closeFlag             Boolean   @default(false)
  planDate              DateTime  @default(now())
  planCloseDate         DateTime?
  tradeCategory         String
  tradeRating           Int?
  baseCandleOpenPrice   Int
  baseCandleClosePrice  Int
  baseCandleCenterPrice Int
  baseCandleSize        Float
  tickPrice             Int
  transactionAmount     Int?
  totalAssignedFund     Int?
  currentAvgPrice       Int       @default(0)
  currentQuantity       Int       @default(0)
  currentTotalMoney     Int       @default(0)
}

model NotifyItem {
  stockCode         String         @id @db.VarChar(20)
  stockName         String
  targetPrice       Int
  enableTargetPrice Boolean
  vixPercent        Float          @default(3.0)
  profitPercent     Float
  profitPrice       Int
  lossCutPercent    Float
  lossCutPrice      Int
  lastNotifyPrice   Int
  lastNotifyDate    DateTime?
  alarmCondition    AlarmCondition @default(LT)
  trailMode         TrailMode      @default(BUY)
}
